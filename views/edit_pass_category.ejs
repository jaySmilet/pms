<%- include('header') %>
      <div class="row my-5">
        <div class="col-md-4 offset-4">
          <div class="my-3 py-2 text-white text-center bg-info">
           Edit Password Category
          </div>
          <form action="/passwordCategory/edit/" class="form-horizontal" method="POST">
            <input type="hidden" name="id" value="<%= id %>">
            <div class="text-center text-danger">
              <% if(errors !=''){ %>
              <%= errors.passwordCategory.msg %>
              <% } %>
            </div>
            <div class="text-center text-success">
              <% if(success !=''){ %>
              <%= success %>
              <% } %>
            </div>
            <div class="form-group">
              <div class="col-sm-10">
                <input type="text" class="form-control" name="passwordCategory" value="<%= records.password_category%>" placeholder="New Category">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Update Category</button>
              </div>
             
            </div>
            <p>Click here to <a href="/passwordCategory">View All Categories</a> !</p>
          </form>
        </div>
          </div>
  
          <%- include('footer') %>